<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    >

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/combinedChart"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/chart_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="18dp"
        android:text="Biểu đồ thống kê số lượng công việc" />

    <TextView
        android:id="@+id/move_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="81dp"
        android:text="Chuyển sang biểu đồ thống kê các loại công việc >"
        android:textStyle="italic" />

    <Button
        android:id="@+id/chart_all"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:background="@null"
        android:text="Tất cả" />

    <Button
        android:id="@+id/chart_finshed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/chart_all"
        android:layout_marginStart="88dp"
        android:background="@null"
        android:text="Đã hoàn thành" />

    <Button
        android:id="@+id/chart_unfinshed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chart_all"
        android:layout_marginEnd="14dp"
        android:background="@null"
        android:text="Chưa hoàn thành" />

    <Button
        android:id="@+id/chart_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="Mặc định" />

    <TextView
        android:id="@+id/textViewTestBe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/combinedChart"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginEnd="110dp"
        android:textStyle="italic"
        android:text="Tuần trước" />

    <TextView
        android:id="@+id/textViewTestAf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/combinedChart"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginEnd="37dp"
        android:textStyle="italic"
        android:text="Tuần sau" />

</RelativeLayout>